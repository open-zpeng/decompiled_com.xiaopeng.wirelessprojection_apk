<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="start|center_vertical" android:id="@android:id/background" android:height="14dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <solid android:color="@color/x_color_bg_light"/>
        </shape>
    </item>
    <item android:gravity="start|center_vertical" android:height="16dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="@color/x_color_progressbar_stroke"/>
        </shape>
    </item>
    <item android:gravity="start|center_vertical" android:id="@android:id/secondaryProgress" android:height="14dp">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <corners android:radius="8dp"/>
                <solid android:color="@color/x_color_seekbar_second_progress"/>
            </shape>
        </scale>
    </item>
    <item android:gravity="start|center_vertical" android:id="@android:id/progress" android:height="14dp">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <corners android:radius="8dp"/>
                <solid android:color="@color/x_color_primary"/>
            </shape>
        </scale>
    </item>
</layer-list>
