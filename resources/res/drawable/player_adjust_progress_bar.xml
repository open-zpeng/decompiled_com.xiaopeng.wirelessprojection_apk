<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center_vertical" android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/x_common_radius1"/>
            <solid android:color="@color/player_progress_background"/>
        </shape>
    </item>
    <item android:gravity="center" android:id="@android:id/progress">
        <clip android:clipOrientation="horizontal">
            <shape>
                <corners android:radius="@dimen/x_common_radius1"/>
                <solid android:color="@color/player_progress_indicator"/>
            </shape>
        </clip>
    </item>
</layer-list>
